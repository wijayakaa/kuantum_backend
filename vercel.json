{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["config/**", "routes/**", "public/**", "controllers/**", "model/**", "middleware/**"],
                "maxDuration": 10
            }
        }
    ],
    "routes": [
        {
            "src": "/uploads/(.*)",
            "dest": "/public/uploads/$1"
        },
        {
            "src": "/(.*)",
            "dest": "index.js",
            "headers": {
                "Access-Control-Allow-Credentials": "true",
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET,OPTIONS,PATCH,DELETE,POST,PUT",
                "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization, Cookie",
                "Access-Control-Expose-Headers": "Set-Cookie"
            }
        }
    ]
}
